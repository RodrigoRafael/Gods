<h1>Listing gods</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Religion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gods.each do |god| %>
  <tr>
    <td><%= god.name %></td>
    <td><%= god.description %></td>
    <td><%= god.religion %></td>
    <td><%= link_to 'Show', god, id: "show_#{god.id}" %></td>
    <td><%= link_to 'Edit', edit_god_path(god), id: "edit_#{god.id}" %></td>
    <td><%= link_to 'Destroy', god, id: "destroy_#{god.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

